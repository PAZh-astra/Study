//1
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;
int main(){
    setlocale(LC_ALL, "rus");
    int x=0;
    const int size = 10;
    const int A = -100;
    const int B = 101;
    srand(time(NULL));
    int* M = new int [size];
    for(int i = 0; i < size; i++) {
        M[i] = A + rand() % (B - A + 1);
        cout << M[i] << " | " ;
    }
    cout << endl << endl;
    for(int i = 0; i < size; i++){
        if (M[i]>=0 && M[i]%2==0){
            x+=M[i];
        }
    }
    cout<<endl<<"Сумма четных положительных элементов матрицы равна "<< x;
    delete[] M;
    return 0;
    
    //2
    
