//1
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;
int main(){
    setlocale(LC_ALL, "rus");
    int x=0;
    int M[10] = {};
    const int A = -100;
    const int B = 101;
    srand(time(NULL));
    for(int i = 0; i < 10; i++) {
        M[i] = A + rand() % (B - A + 1);
        cout << M[i] << " | " ;
    }
        for(int i = 0; i < 10; i++){
        if (M[i]>=0 && M[i]%2==0){
            x+=M[i];
        }
    }
    cout<<endl<<"Сумма четных положительных элементов матрицы равна "<< x;
    return 0;
}

    
//2
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;
int main(){
    setlocale(LC_ALL, "rus");
    int a=0;
    int M[5] = {};
    const int A = 0;
    const int B = 101;
    srand(time(NULL));
    for(int i = 0; i < 10; i++) {
       M[i] = A + rand() % (B - A + 1);
        cout <<"|"<< M[i] << " | " ;
        if (M[i]%2==0){
            if (M[i]>a){
                a=M[i];
            }
        }
        }
    cout<<endl<<"Максимальное четное число равно "<<a<<endl;
    return 0;
}

//3
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;
int main(){
    setlocale(LC_ALL, "rus");
    int x=0;
    int M[10] = {};
    const int A = 0;
    const int B = 101;
    srand(time(NULL));
    for(int i = 0; i < 10; i++) {
        M[i] = A + rand() % (B - A + 1);
        cout << M[i] << " | " ;
        x+=M[i];
    }
    x=x/10;
    cout<< endl<<endl;
    for(int i = 0; i < 10; i++){
        if (M[i]<x)
        cout<<M[i]<<"|";
        }
    return 0;
}

