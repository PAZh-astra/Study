//1
#include <iostream>
using namespace std;

int main()
{
 setlocale(LC_ALL, "rus");

 int a = 199; // наименьший возраст счетчик
float totalSum = 0; // сумма возрастов
 int c = 0; // наибольший возраст счетчик
float x;
int amountDigits = 0; //счетчик посетителей
 do
 {
cout << "Посетитель (введите возраст) " << amountDigits + 1 << " = ";
 cin >> x;

 if (x) // если digit любое значение кроме 0(false)
 {
 amountDigits++;
 totalSum += x;
 if (x>c)
 c=x;
  if (x<a)
 a=x;
 }
 } while (x);
 cout << "\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
 cout << "Количество посетителей: " << amountDigits << endl;
 cout << "Средний возраст: " << totalSum/amountDigits << endl;
 cout << "Среднее арифметическое: " << totalSum / amountDigits <<endl;
 cout << "Самый старший: " << c << endl;
 cout << "Самый младший: " << a<< endl;
return 0;
}

//2
#include <iostream>
using namespace std;
int main()
{
 setlocale(LC_ALL, "rus");

int x = 15; // число ящиков
float S = 0; // сумма ушедших ящиков
float y;
int amountDigits = 0; //счетчик посетителей
 do
 {
cout << "Ввести колличество ящиков в грузовик " << amountDigits + 1 << " = ";
 cin >> y;
 if (y) // если y любое значение кроме 0(false)
 {
 amountDigits++;
 S += y;
 }
 if (S>=15) 
 break;
 } while (y);
 cout << "\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
 cout << "Количество машин: " << amountDigits << endl;
return 0;
}

//3
#include <iostream>
using namespace std;
int main()
{
 setlocale(LC_ALL, "rus");
int x, y, a; 
int b = 0;
float S = 0; 
cout << "Ввести диапазон ";
cin >> x >> y;
do {
if (x%2!=0) {
    S+=x;
    x+=2;
} 
if (x%2==0)
{
    x+=1;
    S+=x;
    x+=2;
}
if (x>y) 
break;
} while (x<=y);
 cout << "\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n";
 cout << "Сумма нечетных: " << S << endl;
return 0;
}

//4
#include <iostream>
using namespace std;
 
int main()
{
    setlocale(LC_ALL, "rus");
    int h = 0; // высота треугольника
    cout << "Введите высоту  равнобедренного треугольника: ";
    cin >> h;
 
    for (int i=0; i < h; i++)
    {
        for (int j = 1; j < h-i; j++)
        {
            cout << ' ';
        }   
 
        for (int j=h-2*i; j <= h; j++)
        {
            cout << '^';
        }           
        cout << endl;
    }
    return 0;
}

//5
#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus");
int x, y, a;
cout << "Введите число "<< endl;
cin >> x;
a=0;
do {
    y=x%10;
    if (y > a)
    a=y;
    x=x/10;
} while (x>0);
cout << "ответ = "<< a;
return 0;
}

//6
#include <iostream>
using namespace std;
int main() {
    setlocale(LC_ALL, "rus");
    double i,q;
    int n;
    cout << "Введите колличество чисел для генератора" << endl;
    cin >> n;
    int randomDigits[n] = {};
    q = 0;
    srand(time(NULL));
    for (int i=0;i<n;i++) {
        randomDigits[i] = rand();
         if (rand()% 2 == 0) {
            q += 1;
         }
        cout << rand() << endl;
    }
double x=q/n;
    cout << (x * 100);
return 0;
}
//7
#include <iostream>
using namespace std;
int main() {
    setlocale(LC_ALL, "rus");
    int i,y,x,n;
    cout << "Введите колличество чисел для генератора" << endl;
    cin >> n;
    cout<< "x - правая сторона равенства, а y - левая"<< endl;
    x = 0;
    for (int i=0;i<n;i++) {
        x+=i+1;
    }
    cout << "x" <<x << endl;
    y=n*(n+1)/2;
    cout << "проверено и доказано, т.к. x= "<< x<<",а y= "<< y;
return 0;
}

