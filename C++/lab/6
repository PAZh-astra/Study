//4
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int x=2;
bool Prime(int n){
    for (int i=2; i*i<=n; i++){
        if (n%i==0){
            return false;
        }
    }
    return true;
}
int func(){    
    while(!Prime(x)){
        x++;
    }
    x++;
    return x-1;
}
int main() {
    int l=func();
    cout<<"l= "<< l<<endl;
    l=func();
    cout<<"l= "<< l<<endl;
    l=func();
    cout<<"l= "<< l<<endl;
    l=func();
    cout<<"l= "<< l<<endl;
    l=func();
    cout<<"l= "<< l<<endl;
    l=func();
    cout<<"l= "<< l<<endl;
return 0;
}

